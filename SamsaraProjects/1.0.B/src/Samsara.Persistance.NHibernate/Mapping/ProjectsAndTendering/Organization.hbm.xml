<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="Organization" table="ProjectsAndTendering.Organizations">
    
    <id name="OrganizationId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn" type="Timestamp"/>
    <property name="UpdatedOn" type="Timestamp"/>
    <property name="Activated"/>
    <property name="Deleted"/>

  </class>

  <query name="Organization.GetListByParameters">
    <![CDATA[
        from Organization where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <sql-query name="Organization.SearchByParameters" cacheable="false" read-only="true">
    <return-scalar column="OrganizationId" type="int"/>
    <return-scalar column="Name" type="string"/>
    <![CDATA[
      SELECT b.OrganizationId, b.Name
      FROM ProjectsAndTendering.Organizations b
      WHERE b.Deleted = 0 and b.Activated = 1
      AND b.Name like :Name
    ]]>
  </sql-query>

</hibernate-mapping>