<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.Main.Core" 
  namespace="Samsara.Main.Core.Entities">
  
  <class name="LoginAttempt" table="Main.LoginAttempts">
    
    <id name="LoginAttemptId" type="int">
      <generator class="native"/>
    </id>

    <property name="Successful"/>
    <property name="Username"/>
    <property name="DomainUser"/>
    <property name="MacAddresses"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn" type="Timestamp"/>
    <property name="UpdatedOn" type="Timestamp"/>
    <property name="Activated"/>
    <property name="Deleted"/>

    <many-to-one name="User"
                 class="Samsara.Main.Core.Entities.User, Samsara.Main.Core"
                 column="UserId"/>

  </class>

  <query name="LoginAttempt.GetByParameters">
    <![CDATA[
        from LoginAttempt where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="LoginAttempt.GetListByParameters">
    <![CDATA[
        from LoginAttempt where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="LoginAttempt.SearchByParameters">
    <![CDATA[
        from LoginAttempt where Deleted = 0 and Activated = 1
    ]]>
  </query>

</hibernate-mapping>