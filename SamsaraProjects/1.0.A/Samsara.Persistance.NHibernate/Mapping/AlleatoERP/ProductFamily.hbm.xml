<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
  assembly="Samsara.AlleatoERP.Core"
  namespace="Samsara.AlleatoERP.Core.Entities">
  
  <class name="ProductFamily" table="AlleatoERP.ProductFamilies">

    <id name="ProductFamilyId">
    </id>
    
    <property name="Name"/>
    <property name="Description"/>

    <property name="Activated"/>
    <property name="Deleted"/>
    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn"/>
    <property name="UpdatedOn"/>
    
  </class>

  <query name="ProductFamily.GetByParameters">
    <![CDATA[
        from ProductFamily where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductFamily.GetListByParameters">
    <![CDATA[
        from ProductFamily where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductFamily.SearchByParameters">
    <![CDATA[
        from ProductFamily 
        where Name like :Name and Deleted = 0 and Activated = 1
    ]]>
  </query>

</hibernate-mapping>