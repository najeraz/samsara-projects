<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.Operation.Core" 
  namespace="Samsara.Operation.Core.Entities">
  
  <class name="ProductBrand" table="AlleatoERP.ProductBrands">
    
    <id name="ProductBrandId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="ProductBrand.GetByParameters">
    <![CDATA[
        from ProductBrand where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductBrand.GetListByParameters">
    <![CDATA[
        from ProductBrand where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductBrand.SearchByParameters">
    <![CDATA[
        from ProductBrand where Deleted = 0 and Activated = 1
        and Name like :Name
    ]]>
  </query>
  
</hibernate-mapping>