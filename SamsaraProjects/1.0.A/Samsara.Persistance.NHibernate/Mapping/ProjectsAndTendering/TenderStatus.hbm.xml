<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="TenderStatus" table="ProjectsAndTendering.TenderStatuses">
    
    <id name="TenderStatusId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn"/>
    <property name="UpdatedOn"/>
    <property name="Activated"/>
    <property name="Deleted"/>

  </class>

  <query name="TenderStatus.GetListByParameters">
    <![CDATA[
        from TenderStatus where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <sql-query name="TenderStatus.SearchByParameters" cacheable="false" read-only="true">
    <return-scalar column="TenderStatusId" type="int"/>
    <return-scalar column="Name" type="string"/>
    <![CDATA[
      SELECT ts.TenderStatusId, ts.Name
      FROM ProjectsAndTendering.TenderStatuses ts
      WHERE ts.Deleted = 0 and ts.Activated = 1
      AND ts.Name like :Name
    ]]>
  </sql-query>
  
</hibernate-mapping>