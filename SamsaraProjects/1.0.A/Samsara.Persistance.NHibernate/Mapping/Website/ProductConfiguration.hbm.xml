<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.Website.Core" 
  namespace="Samsara.Website.Core.Entities">
  
  <class name="ProductConfiguration" table="Website.ProductConfigurations">
    
    <id name="ProductConfigurationId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>
    <property name="Hidden"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn" type="Timestamp"/>
    <property name="UpdatedOn" type="Timestamp"/>
    <property name="Activated"/>
    <property name="Deleted"/>
    
  </class>

  <query name="ProductConfiguration.GetByParameters">
    <![CDATA[
        from ProductConfiguration where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductConfiguration.GetListByParameters">
    <![CDATA[
        from ProductConfiguration where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductConfiguration.SearchByParameters">
    <![CDATA[
        from ProductConfiguration where Deleted = 0 and Activated = 1
        and Name like :Name
    ]]>
  </query>

</hibernate-mapping>