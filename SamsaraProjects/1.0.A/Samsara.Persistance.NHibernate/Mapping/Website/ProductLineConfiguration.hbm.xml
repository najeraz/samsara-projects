<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.Website.Core" 
  namespace="Samsara.Website.Core.Entities">
  
  <class name="ProductLineConfiguration" table="Website.ProductLineConfigurations">
    
    <id name="ProductLineConfigurationId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>
    <property name="Hidden"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn"/>
    <property name="UpdatedOn"/>
    <property name="Activated"/>
    <property name="Deleted"/>

    <set name="SamsaraBusinessUnits" table="SamsaraStructure.SamsaraBusinessUnits" where="Deleted = 0 AND Activated = 1"
         cascade="all-delete-orphan" lazy="false">
      <key column="SamsaraBusinessUnitId"/>
      <one-to-many
        class="Samsara.SamsaraStructure.Core.Entities.SamsaraBusinessUnit, Samsara.SamsaraStructure.Core"/>
    </set>
    
  </class>

  <query name="ProductLineConfiguration.GetByParameters">
    <![CDATA[
        from ProductLineConfiguration where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductLineConfiguration.GetListByParameters">
    <![CDATA[
        from ProductLineConfiguration where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductLineConfiguration.SearchByParameters">
    <![CDATA[
        from ProductLineConfiguration where Deleted = 0 and Activated = 1
        and Name like :Name
    ]]>
  </query>

</hibernate-mapping>