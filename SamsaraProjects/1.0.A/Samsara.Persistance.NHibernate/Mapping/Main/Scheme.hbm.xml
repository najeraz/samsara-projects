<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.Main.Core" 
  namespace="Samsara.Main.Core.Entities">
  
  <class name="Scheme" table="Main.Schemes">
    
    <id name="SchemeId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn"/>
    <property name="UpdatedOn"/>
    <property name="Activated"/>
    <property name="Deleted"/>
    
  </class>

  <query name="Scheme.GetByParameters">
    <![CDATA[
        from Scheme where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="Scheme.GetListByParameters">
    <![CDATA[
        from Scheme where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="Scheme.SearchByParameters">
    <![CDATA[
        from Scheme where Deleted = 0 and Activated = 1
        and Name like :Name
    ]]>
  </query>

</hibernate-mapping>