<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="CustomerInfrastructureServerComputer" table="CustomerContext.CustomerInfrastructureServerComputers">

    <id name="CustomerInfrastructureServerComputerId" type="int">
      <generator class="native"/>
    </id>

    <property name="SerialNumber"/>
    <property name="ManufacturerReferenceNumber"/>
    <property name="CPU"/>
    <property name="RAM"/>
    <property name="ServerModel"/>
    <property name="StorageSystem"/>
    <property name="Utilization"/>
    <property name="Scalability"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="CustomerInfrastructure"
                 class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructure, Samsara.CustomerContext.Core"
                 column="CustomerInfrastructureId"/>

    <many-to-one name="ComputerBrand"
                 class="Samsara.CustomerContext.Core.Entities.ComputerBrand, Samsara.CustomerContext.Core"
                 column="ComputerBrandId"/>

    <many-to-one name="OperativeSystem"
                 class="Samsara.CustomerContext.Core.Entities.OperativeSystem, Samsara.CustomerContext.Core"
                 column="OperativeSystemId"/>
    
    
    <set name="CustomerInfrastructureServerComputerDBMSs" table="CustomerContext.CustomerInfrastructureServerComputerDBMSs"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerInfrastructureServerComputerId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructureServerComputerDBMS, Samsara.CustomerContext.Core"/>
    </set>
    
  </class>

  <query name="CustomerInfrastructureServerComputer.GetByParameters">
    <![CDATA[
        from CustomerInfrastructureServerComputer
        where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerInfrastructureServerComputer.GetListByParameters">
    <![CDATA[
        from CustomerInfrastructureServerComputer
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureId = :CustomerInfrastructureId
    ]]>
  </query>

  <query name="CustomerInfrastructureServerComputer.SearchByParameters">
    <![CDATA[
        from CustomerInfrastructureServerComputer
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureId = :CustomerInfrastructureId
    ]]>
  </query>

</hibernate-mapping>