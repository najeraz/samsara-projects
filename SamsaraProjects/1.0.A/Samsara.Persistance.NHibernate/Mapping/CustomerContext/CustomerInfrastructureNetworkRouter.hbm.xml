<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="CustomerInfrastructureNetworkRouter" table="CustomerContext.CustomerInfrastructureNetworkRouters">
    
    <id name="CustomerInfrastructureNetworkRouterId" type="int">
      <generator class="native"/>
    </id>

    <property name="RouterModel"/>
    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="CustomerInfrastructureNetwork"
                 class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructureNetwork, Samsara.CustomerContext.Core"
                 column="CustomerInfrastructureNetworkId"/>

    <many-to-one name="RouterBrand"
                 class="Samsara.CustomerContext.Core.Entities.RouterBrand, Samsara.CustomerContext.Core"
                 column="RouterBrandId"/>

  </class>

  <query name="CustomerInfrastructureNetworkRouter.GetByParameters">
    <![CDATA[
        from CustomerInfrastructureNetworkRouter 
        where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerInfrastructureNetworkRouter.GetListByParameters">
    <![CDATA[
        from CustomerInfrastructureNetworkRouter
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureNetworkId = :CustomerInfrastructureNetworkId
    ]]>
  </query>

  <query name="CustomerInfrastructureNetworkRouter.SearchByParameters">
    <![CDATA[
        from CustomerInfrastructureNetworkRouter
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureNetworkId = :CustomerInfrastructureNetworkId
    ]]>
  </query>

</hibernate-mapping>