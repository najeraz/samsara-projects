<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="CustomerInfrastructureBackupSoftware" table="CustomerContext.CustomerInfrastructureBackupSoftwares">
    
    <id name="CustomerInfrastructureBackupSoftwareId" type="int">
      <generator class="native"/>
    </id>

    <property name="Description"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn" type="Timestamp"/>
    <property name="UpdatedOn" type="Timestamp"/>
    <property name="Activated"/>
    <property name="Deleted"/>

    <many-to-one name="CustomerInfrastructure"
                 class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructure, Samsara.CustomerContext.Core"
                 column="CustomerInfrastructureId"/>

    <many-to-one name="BackupSoftwareBrand"
                 class="Samsara.CustomerContext.Core.Entities.BackupSoftwareBrand, Samsara.CustomerContext.Core"
                 column="BackupSoftwareBrandId"/>

    <many-to-one name="CustomerInfrastructureServerComputer"
                 class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructureServerComputer, Samsara.CustomerContext.Core"
                 column="CustomerInfrastructureServerComputerId"/>

  </class>

  <query name="CustomerInfrastructureBackupSoftware.GetByParameters">
    <![CDATA[
        from CustomerInfrastructureBackupSoftware
        where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerInfrastructureBackupSoftware.GetListByParameters">
    <![CDATA[
        from CustomerInfrastructureBackupSoftware
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureId = :CustomerInfrastructureId
    ]]>
  </query>

  <query name="CustomerInfrastructureBackupSoftware.SearchByParameters">
    <![CDATA[
        from CustomerInfrastructureBackupSoftware
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureId = :CustomerInfrastructureId
    ]]>
  </query>

</hibernate-mapping>