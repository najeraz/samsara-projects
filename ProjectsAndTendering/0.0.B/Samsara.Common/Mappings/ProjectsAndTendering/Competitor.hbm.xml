<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="Competitor" table="Competitors">
    
    <id name="CompetitorId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="Competitor.GetListByParameters">
    <![CDATA[
        from Competitor where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <sql-query name="Competitor.SearchByParameters" cacheable="false" read-only="true">
    <return-scalar column="CompetitorId" type="int"/>
    <return-scalar column="Name" type="string"/>
    <![CDATA[
      SELECT c.CompetitorId, c.Name
      FROM Competitors c
      WHERE c.Deleted = 0 and c.Activated = 1
      AND c.Name like :Name
    ]]>
  </sql-query>

</hibernate-mapping>