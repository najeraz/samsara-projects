<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="CustomerNetwork" table="CustomerContext.CustomerNetworks">

    <id name="CustomerNetworkId" type="int">
      <generator class="native"/>
    </id>

    <many-to-one name="Customer"
                 class="Samsara.CustomerContext.Core.Entities.Customer, Samsara.CustomerContext.Core"
                 column="CustomerId"/>

    <many-to-one name="CustomerNetworkSite"
                 class="Samsara.CustomerContext.Core.Entities.CustomerNetworkSite, Samsara.CustomerContext.Core"
                 column="CustomerNetworkSiteId"/>


    <set name="CustomerNetworkSwitches" table="CustomerContext.CustomerNetworkSwitches"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerNetworkSwitch, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerNetworkCommutators" table="CustomerContext.CustomerNetworkCommutators"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerNetworkCommutator, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerNetworkCablings" table="CustomerContext.CustomerNetworkCablings"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerNetworkCabling, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerNetworkRouters" table="CustomerContext.CustomerNetworkRouters"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerNetworkRouter, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerNetworkFirewalls" table="CustomerContext.CustomerNetworkFirewalls"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerNetworkFirewall, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerNetworkWifis" table="CustomerContext.CustomerNetworkWifis"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerNetworkWifi, Samsara.CustomerContext.Core"/>
    </set>
    
  </class>

  <query name="CustomerNetwork.GetByParameters">
    <![CDATA[
        from CustomerNetwork where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerNetwork.GetListByParameters">
    <![CDATA[
        from CustomerNetwork where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerNetwork.SearchByParameters">
    <![CDATA[
        from CustomerNetwork where Deleted = 0 and Activated = 1
    ]]>
  </query>

</hibernate-mapping>