<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="Customer" table="CustomerContext.Customers">

    <id name="CustomerId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="BusinessType"/>
    <property name="Description"/>
    <property name="GroundedOutlet"/>
    <property name="TrainingAndCourses"/>

    <many-to-one name="CustomerNetwork"
                 class="Samsara.CustomerContext.Core.Entities.CustomerNetwork, Samsara.CustomerContext.Core"
                 column="CustomerNetworkId"/>

    <set name="CustomerPersonalComputers" table="CustomerContext.CustomerPersonalComputers" 
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerPersonalComputer, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerServerComputers" table="CustomerContext.CustomerServerComputers" 
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerServerComputer, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerUPSs" table="CustomerContext.CustomerUPSs" 
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerUPS, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerPrinters" table="CustomerContext.CustomerPrinters" 
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerPrinter, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerTelephonies" table="CustomerContext.CustomerTelephonies" 
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerTelephony, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerCCTVs" table="CustomerContext.CustomerCCTVs" 
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerCCTV, Samsara.CustomerContext.Core"/>
    </set>
    
  </class>

  <query name="Customer.GetByParameters">
    <![CDATA[
        from Customer where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="Customer.GetListByParameters">
    <![CDATA[
        from Customer where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="Customer.SearchByParameters">
    <![CDATA[
        from Customer where Deleted = 0 and Activated = 1
    ]]>
  </query>

</hibernate-mapping>