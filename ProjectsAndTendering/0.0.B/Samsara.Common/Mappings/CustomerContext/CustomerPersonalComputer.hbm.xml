<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="CustomerPersonalComputer" table="CustomerContext.CustomerPersonalComputers">

    <id name="CustomerPersonalComputerId" type="int">
      <generator class="native"/>
    </id>

    <property name="SerialNumber"/>
    <property name="ManufacturerReferenceNumber"/>
    <property name="CPU"/>
    <property name="RAM"/>
    <property name="StorageSystem"/>

    <many-to-one name="Customer"
                 class="Samsara.CustomerContext.Core.Entities.Customer, Samsara.CustomerContext.Core"
                 column="CustomerId"/>

    <many-to-one name="CustomerPersonalComputerType"
                 class="Samsara.CustomerContext.Core.Entities.CustomerPersonalComputerType, Samsara.CustomerContext.Core"
                 column="CustomerPersonalComputerTypeId"/>

    <many-to-one name="ComputerBrand"
                 class="Samsara.CustomerContext.Core.Entities.ComputerBrand, Samsara.CustomerContext.Core"
                 column="ComputerBrandId"/>

    <many-to-one name="OperativeSystem"
                 class="Samsara.CustomerContext.Core.Entities.OperativeSystem, Samsara.CustomerContext.Core"
                 column="OperativeSystemId"/>
    
  </class>

  <query name="CustomerPersonalComputer.GetByParameters">
    <![CDATA[
        from CustomerPersonalComputer where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerPersonalComputer.GetListByParameters">
    <![CDATA[
        from CustomerPersonalComputer where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerPersonalComputer.SearchByParameters">
    <![CDATA[
        from CustomerPersonalComputer where Deleted = 0 and Activated = 1
    ]]>
  </query>

</hibernate-mapping>