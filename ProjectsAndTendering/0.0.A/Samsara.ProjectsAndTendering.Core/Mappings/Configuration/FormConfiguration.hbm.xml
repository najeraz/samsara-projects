<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities.Configuration">
  
  <class name="FormConfiguration" table="FormConfigurations">

    <id name="FormConfigurationId" type="int">
      <generator class="native"/>
    </id>
    
    <property name="FormName" not-null="true"/>
    
    <set name="GridConfigurations" table="GridConfigurations" cascade="all-delete-orphan">
      <key column="FormConfigurationId"/>
      <one-to-many 
        class="Samsara.ProjectsAndTendering.Core.Entities.Configuration.GridConfiguration, Samsara.ProjectsAndTendering.Core"/>
    </set>
    
  </class>

  <query name="FormConfiguration.GetByParameters">
    <![CDATA[
        from FormConfiguration where FormName = :FormName
    ]]>
  </query>

</hibernate-mapping>