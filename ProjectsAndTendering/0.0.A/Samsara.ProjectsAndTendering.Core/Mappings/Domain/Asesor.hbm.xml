<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities.Domain">
  
  <class name="Asesor" table="Asesors">
    
    <id name="AsesorId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="FullName"/>
    <property name="CanApprove"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="Asesor.GetListByParameters">
    <![CDATA[
        from Asesor where Deleted = 0 and Activated = 1
    ]]>
  </query>
  
  <sql-query name="Asesor.SearchByParameters" cacheable="false" read-only="true">
    <return-scalar column="AsesorId" type="int"/>
    <return-scalar column="Name" type="string"/>
    <return-scalar column="FullName" type="string"/>
    <![CDATA[
      SELECT a.AsesorId, a.Name, a.FullName
      FROM Asesors a
      WHERE a.Deleted = 0 and a.Activated = 1
      AND a.Name like :Name
      AND a.FullName like :FullName
      AND (:ShowAll = 1 OR a.CanApprove = :ShowApprovers)
    ]]>
  </sql-query>

</hibernate-mapping>