<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities.Domain">
  
  <class name="TenderLineCompetitor" table="TenderLineCompetitors">

    <id name="TenderLineCompetitorId" type="int">
      <generator class="native"/>
    </id>

    <property name="Price"/>
    <property name="Description"/>
    <property name="Manufacturer"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="TenderLine"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Domain.TenderLine, Samsara.ProjectsAndTendering.Core"
                 column="TenderLineId"/>
    
    <many-to-one name="Competitor"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Domain.Competitor, Samsara.ProjectsAndTendering.Core"
                 column="CompetitorId"/>
    
    <many-to-one name="Currency"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Domain.Currency, Samsara.ProjectsAndTendering.Core"
                 column="CurrencyId"/>
    
  </class>

  <query name="TenderLineCompetitor.SearchByParameters">
    <![CDATA[
        from TenderLineCompetitor where Deleted = 0 and Activated = 1
        and TenderLineId = :TenderLineId
    ]]>
  </query>

</hibernate-mapping>