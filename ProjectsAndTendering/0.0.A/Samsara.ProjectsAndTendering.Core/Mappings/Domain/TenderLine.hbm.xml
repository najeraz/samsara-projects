<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities.Domain">
  
  <class name="TenderLine" table="TenderLines">
    
    <id name="TenderLineId" type="int">
      <generator class="native"/>
    </id>
    
    <property name="Name"/>
    <property name="Quantity"/>
    <property name="Description"/>
    <property name="ManufacturerId"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="Tender"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Domain.Tender, Samsara.ProjectsAndTendering.Core"
                 column="TenderId"/>

    <set name="TenderLineManufacturer" table="TenderLineManufacturer" where="Deleted = 0 AND Activated = 1"
         cascade="all-delete-orphan" lazy="false">
      <key column="TenderLineId"/>
      <one-to-many
        class="Samsara.ProjectsAndTendering.Core.Entities.Domain.TenderLineManufacturer, Samsara.ProjectsAndTendering.Core"/>
    </set>
    
  </class>

  <query name="TenderLine.GetListByParameters">
    <![CDATA[
        from TenderLine where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="TenderLine.SearchByParameters">
    <![CDATA[
        from TenderLine where Deleted = 0 and Activated = 1
        and TenderId = :TenderId
    ]]>
  </query>

</hibernate-mapping>