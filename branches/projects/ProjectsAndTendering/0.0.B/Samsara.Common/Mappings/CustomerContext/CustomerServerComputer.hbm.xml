<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="CustomerCustomerServerComputer" table="CustomerContext.CustomerServerComputers">

    <id name="CustomerServerComputerId" type="int">
      <generator class="native"/>
    </id>

    <property name="SerialNumber"/>
    <property name="ManufacturerReferenceNumber"/>
    <property name="CPU"/>
    <property name="RAM"/>
    <property name="StorageSystem"/>
    <property name="Utilization"/>
    <property name="Scalability"/>

    <many-to-one name="Customer"
                 class="Samsara.CustomerContext.Core.Entities.Customer, Samsara.CustomerContext.Core"
                 column="CustomerId"/>

    <many-to-one name="ComputerBrand"
                 class="Samsara.CustomerContext.Core.Entities.ComputerBrand, Samsara.CustomerContext.Core"
                 column="ComputerBrandId"/>

    <many-to-one name="ServerModel"
                 class="Samsara.CustomerContext.Core.Entities.ServerModel, Samsara.CustomerContext.Core"
                 column="ServerModelId"/>

    <many-to-one name="OperativeSystem"
                 class="Samsara.CustomerContext.Core.Entities.OperativeSystem, Samsara.CustomerContext.Core"
                 column="OperativeSystemId"/>

    <many-to-one name="DBMS"
                 class="Samsara.CustomerContext.Core.Entities.DBMS, Samsara.CustomerContext.Core"
                 column="DBMSId"/>
    
  </class>

  <query name="CustomerServerComputer.GetByParameters">
    <![CDATA[
        from CustomerServerComputer where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerServerComputer.GetListByParameters">
    <![CDATA[
        from CustomerServerComputer where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerServerComputer.SearchByParameters">
    <![CDATA[
        from CustomerServerComputer where Deleted = 0 and Activated = 1
    ]]>
  </query>

</hibernate-mapping>