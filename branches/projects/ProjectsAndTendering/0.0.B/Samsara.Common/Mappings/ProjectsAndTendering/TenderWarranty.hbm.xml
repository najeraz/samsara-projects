<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="TenderWarranty" table="TenderWarranties">
    
    <id name="TenderWarrantyId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="ExpirationDate"/>
    <property name="Amount"/>
    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="Tender"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Tender, Samsara.ProjectsAndTendering.Core"
                 column="TenderId"/>
    
    <many-to-one name="WarrantyType" lazy="false"
                 class="Samsara.ProjectsAndTendering.Core.Entities.WarrantyType, Samsara.ProjectsAndTendering.Core"
                 column="WarrantyTypeId"/>
    
    <many-to-one name="DocumentTypeWarranty" lazy="false"
                 class="Samsara.ProjectsAndTendering.Core.Entities.DocumentTypeWarranty, Samsara.ProjectsAndTendering.Core"
                 column="DocumentTypeWarrantyId"/>

  </class>

  <query name="TenderWarranty.GetListByParameters">
    <![CDATA[
        from TenderWarranty where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="TenderWarranty.SearchByParameters">
    <![CDATA[
        from TenderWarranty where Deleted = 0 and Activated = 1
        and TenderId = :TenderId
    ]]>
  </query>
  
</hibernate-mapping>