<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="TenderWholesaler" table="ProjectsAndTendering.TenderWholesalers">
    
    <id name="TenderWholesalerId" type="int">
      <generator class="native"/>
    </id>

    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="Tender"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Tender, Samsara.ProjectsAndTendering.Core"
                 column="TenderId"/>

    <many-to-one name="Wholesaler" fetch="join"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Wholesaler, Samsara.ProjectsAndTendering.Core"
                 column="WholesalerId"/>

  </class>

  <query name="TenderWholesaler.GetListByParameters">
    <![CDATA[
        from TenderWholesaler where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="TenderWholesaler.SearchByParameters">
    <![CDATA[
        from TenderWholesaler where Deleted = 0 and Activated = 1
        and TenderId = :TenderId
    ]]>
  </query>

</hibernate-mapping>