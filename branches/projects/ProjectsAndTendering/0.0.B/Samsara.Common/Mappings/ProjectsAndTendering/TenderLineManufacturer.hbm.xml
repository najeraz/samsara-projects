<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="TenderLineManufacturer" table="TenderLineManufacturers">

    <id name="TenderLineManufacturerId" type="int">
      <generator class="native"/>
    </id>

    <property name="Price"/>
    <property name="Description"/>
    <property name="Model"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="TenderLine"
                 class="Samsara.ProjectsAndTendering.Core.Entities.TenderLine, Samsara.ProjectsAndTendering.Core"
                 column="TenderLineId"/>
    <many-to-one name="Manufacturer"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Manufacturer, Samsara.ProjectsAndTendering.Core"
                 column="ManufacturerId"/>
    
  </class>

  <query name="TenderLineManufacturer.SearchByParameters">
    <![CDATA[
        from TenderLineManufacturer where Deleted = 0 and Activated = 1
        and TenderLineId = :TenderLineId
    ]]>
  </query>

</hibernate-mapping>