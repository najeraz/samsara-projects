<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="ComputerType" table="CustomerContext.ComputerTypes">
    
    <id name="ComputerTypeId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="ComputerType.GetByParameters">
    <![CDATA[
        from ComputerType where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ComputerType.GetListByParameters">
    <![CDATA[
        from ComputerType where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ComputerType.SearchByParameters">
    <![CDATA[
        from ComputerType where Deleted = 0 and Activated = 1
    ]]>
  </query>

</hibernate-mapping>