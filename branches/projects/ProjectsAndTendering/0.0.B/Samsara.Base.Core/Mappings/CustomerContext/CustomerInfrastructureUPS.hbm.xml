<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="CustomerInfrastructureUPS" table="CustomerContext.CustomerInfrastructureUPSs">

    <id name="CustomerInfrastructureUPSId" type="int">
      <generator class="native"/>
    </id>

    <property name="Capacity"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="CustomerInfrastructure"
                 class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructure, Samsara.CustomerContext.Core"
                 column="CustomerInfrastructureId"/>
    
    <many-to-one name="UPSType"
                 class="Samsara.CustomerContext.Core.Entities.UPSType, Samsara.CustomerContext.Core"
                 column="UPSTypeId"/>

    <many-to-one name="UPSBrand"
                 class="Samsara.CustomerContext.Core.Entities.UPSBrand, Samsara.CustomerContext.Core"
                 column="UPSBrandId"/>
    
  </class>

  <query name="CustomerInfrastructureUPS.GetByParameters">
    <![CDATA[
        from CustomerInfrastructureUPS where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerInfrastructureUPS.GetListByParameters">
    <![CDATA[
        from CustomerInfrastructureUPS where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerInfrastructureUPS.SearchByParameters">
    <![CDATA[
        from CustomerInfrastructureUPS where Deleted = 0 and Activated = 1
    ]]>
  </query>

</hibernate-mapping>