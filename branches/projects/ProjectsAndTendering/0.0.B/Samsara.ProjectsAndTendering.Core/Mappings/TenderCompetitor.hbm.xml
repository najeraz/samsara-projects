<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="TenderCompetitor" table="TenderCompetitors">
    
    <id name="TenderCompetitorId" type="int">
      <generator class="native"/>
    </id>

    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="Tender"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Tender, Samsara.ProjectsAndTendering.Core"
                 column="TenderId"/>

    <many-to-one name="Competitor" lazy="false"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Competitor, Samsara.ProjectsAndTendering.Core"
                 column="CompetitorId"/>

  </class>

  <query name="TenderCompetitor.GetListByParameters">
    <![CDATA[
        from TenderCompetitor where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="TenderCompetitor.SearchByParameters">
    <![CDATA[
        from TenderCompetitor where Deleted = 0 and Activated = 1
        and TenderId = :TenderId
    ]]>
  </query>

</hibernate-mapping>