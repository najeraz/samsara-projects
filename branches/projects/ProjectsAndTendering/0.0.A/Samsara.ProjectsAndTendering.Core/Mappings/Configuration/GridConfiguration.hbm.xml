<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities.Configuration">
  
  <class name="GridConfiguration" table="GridConfigurations">

    <id name="GridConfigurationId" type="int">
      <generator class="native"/>
    </id>
    
    <many-to-one name="FormConfiguration" 
                 class="Samsara.ProjectsAndTendering.Core.Entities.Configuration.FormConfiguration, Samsara.ProjectsAndTendering.Core"
                 column="FormConfigurationId"/>

    <set name="GridColumnConfigurations" table="GridColumnConfigurations" cascade="all-delete-orphan" fetch="join" order-by="GridConfigurationId">
      <key column="GridConfigurationId"/>
      <one-to-many
        class="Samsara.ProjectsAndTendering.Core.Entities.Configuration.GridColumnConfiguration, Samsara.ProjectsAndTendering.Core"/>
    </set>

    <property name="GridName"/>
    <property name="IgnoreConfiguration"/>
  </class>

  <query name="GridConfiguration.GetByParameters">
    <![CDATA[
        from GridConfiguration grid where grid.GridName = :GridName
        and grid.FormConfiguration.FormConfigurationId = :FormConfigurationId
    ]]>
  </query>

</hibernate-mapping>