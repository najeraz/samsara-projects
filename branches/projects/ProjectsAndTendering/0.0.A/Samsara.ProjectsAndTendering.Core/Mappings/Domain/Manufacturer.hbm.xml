<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities.Domain">
  
  <class name="Manufacturer" table="Manufacturers">
    
    <id name="ManufacturerId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="Manufacturer.GetListByParameters">
    <![CDATA[
        from Manufacturer where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <sql-query name="Manufacturer.SearchByParameters" cacheable="false" read-only="true">
    <return-scalar column="ManufacturerId" type="int"/>
    <return-scalar column="Name" type="string"/>
    <![CDATA[
      SELECT ts.ManufacturerId, ts.Name
      FROM Manufacturers ts
      WHERE ts.Deleted = 0 and ts.Activated = 1
      AND ts.Name like :Name
    ]]>
  </sql-query>

</hibernate-mapping>