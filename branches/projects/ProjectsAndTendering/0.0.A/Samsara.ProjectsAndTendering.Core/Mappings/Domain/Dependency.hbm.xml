<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities.Domain">
  
  <class name="Dependency" table="Dependencies">
    
    <id name="DependencyId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="BidderId"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="LoadDependencies">
    <![CDATA[
        from Dependency where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="LoadDependenciesByBidderId">
    <![CDATA[
        from Dependency where BidderId = :BidderId and Deleted = 0 and Activated = 1
    ]]>
  </query>


</hibernate-mapping>