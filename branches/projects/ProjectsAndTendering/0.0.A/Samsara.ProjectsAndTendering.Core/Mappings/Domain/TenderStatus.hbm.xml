<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core.Domain" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="TenderStatus" table="TenderStatuss">
    
    <id name="TenderStatusId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="LoadTenderStatuses">
    <![CDATA[
        from TenderStatus where Deleted = 0 and Activated = 1
    ]]>
  </query>
  
</hibernate-mapping>