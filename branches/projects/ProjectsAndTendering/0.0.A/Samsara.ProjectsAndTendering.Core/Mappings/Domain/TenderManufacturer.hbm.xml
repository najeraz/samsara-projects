<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities.Domain">
  
  <class name="TenderManufacturer" table="TenderManufacturers">

    <id name="TenderManufacturerId" type="int">
      <generator class="native"/>
    </id>
    
    <property name="FolioReference"/>
    <property name="ManufacturerSupport"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="Tender"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Domain.Tender, Samsara.ProjectsAndTendering.Core"
                 column="TenderId"/>

    <many-to-one name="Manufacturer"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Domain.Manufacturer, Samsara.ProjectsAndTendering.Core"
                 column="ManufacturerId"/>
  </class>

  <query name="TenderManufacturer.SearchByParameters">
    <![CDATA[
        from TenderManufacturer where Deleted = 0 and Activated = 1
        and TenderId = :TenderId
    ]]>
  </query>

</hibernate-mapping>