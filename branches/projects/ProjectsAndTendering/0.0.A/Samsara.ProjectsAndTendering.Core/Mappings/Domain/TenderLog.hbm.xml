<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core"
  namespace="Samsara.ProjectsAndTendering.Core.Entities.Domain">
  
  <class name="TenderLog" table="TenderLogs">
    
    <id name="TenderLogId" type="int">
      <generator class="native"/>
    </id>

    <property name="LogDate"/>
    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="TenderLog.GetListByParameters">
    <![CDATA[
        from TenderLog where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <sql-query name="TenderLog.SearchByParameters" cacheable="false" read-only="true">
    <return-scalar column="TenderLogId" type="int"/>
    <return-scalar column="LogDate" type="DateTime"/>
    <return-scalar column="Description" type="string"/>
    <![CDATA[
      SELECT tl.TenderLogId, tl.LogDate, tl.Description
      FROM TenderLoges tl
      WHERE tl.Deleted = 0 and tl.Activated = 1
      AND tl.Description like :Description
    ]]>
  </sql-query>
  
</hibernate-mapping>