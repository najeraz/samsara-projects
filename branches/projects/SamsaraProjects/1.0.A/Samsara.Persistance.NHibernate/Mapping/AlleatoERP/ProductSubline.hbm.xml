<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
  assembly="Samsara.AlleatoERP.Core"
  namespace="Samsara.AlleatoERP.Core.Entities">
  
  <class name="ProductSubline" table="AlleatoERP.ProductSublines">

    <id name="ProductSublineId">
    </id>
    
    <property name="Name"/>
    <property name="Description"/>

    <property name="Activated"/>
    <property name="Deleted"/>
    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn" type="Timestamp"/>
    <property name="UpdatedOn" type="Timestamp"/>
    
  </class>

  <query name="ProductSubline.GetByParameters">
    <![CDATA[
        from ProductSubline where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductSubline.GetListByParameters">
    <![CDATA[
        from ProductSubline where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductSubline.SearchByParameters">
    <![CDATA[
        from ProductSubline 
        where Name like :Name and Deleted = 0 and Activated = 1
    ]]>
  </query>

</hibernate-mapping>