<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
  assembly="Samsara.AlleatoERP.Core"
  namespace="Samsara.AlleatoERP.Core.Entities">
  
  <class name="ProductLine" table="AlleatoERP.ProductLines">

    <id name="ProductLineId">
    </id>
    
    <property name="Name"/>
    <property name="Description"/>

    <property name="Activated"/>
    <property name="Deleted"/>
    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn"/>
    <property name="UpdatedOn"/>
    
  </class>

  <query name="ProductLine.GetByParameters">
    <![CDATA[
        from ProductLine where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductLine.GetListByParameters">
    <![CDATA[
        from ProductLine where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="ProductLine.SearchByParameters">
    <![CDATA[
        from ProductLine 
        where Name like :Name and Deleted = 0 and Activated = 1
    ]]>
  </query>

</hibernate-mapping>