<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
  assembly="Samsara.AlleatoERP.Core"
  namespace="Samsara.AlleatoERP.Core.Entities">
  
  <class name="Staff" table="AlleatoERP.Staffs">

    <id name="StaffId">
    </id>
    
    <property name="Names"/>
    <property name="Lastnames"/>
    <property name="Fullname"/>

    <property name="Activated"/>
    <property name="Deleted"/>
    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn"/>
    <property name="UpdatedOn"/>
    
  </class>

  <query name="Staff.GetByParameters">
    <![CDATA[
        from Staff where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="Staff.GetListByParameters">
    <![CDATA[
        from Staff where Deleted = 0 and Activated = 1
        order by Fullname
    ]]>
  </query>

  <query name="Staff.SearchByParameters">
    <![CDATA[
        from Staff 
        where Name like :Name and Deleted = 0 and Activated = 1
    ]]>
  </query>

</hibernate-mapping>