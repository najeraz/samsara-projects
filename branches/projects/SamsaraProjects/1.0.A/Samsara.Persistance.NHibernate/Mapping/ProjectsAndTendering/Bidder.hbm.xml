<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="Bidder" table="ProjectsAndTendering.Bidders">
    
    <id name="BidderId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn"/>
    <property name="UpdatedOn"/>
    <property name="Activated"/>
    <property name="Deleted"/>

    <many-to-one name="BidderType"
                 class="Samsara.ProjectsAndTendering.Core.Entities.BidderType, Samsara.ProjectsAndTendering.Core"
                 column="BidderTypeId"/>

  </class>

  <query name="Bidder.GetByParameters">
    <![CDATA[
        from Bidder where Deleted = 0 and Activated = 1
        and BidderId = : BidderId
    ]]>
  </query>
  
  <query name="Bidder.GetListByParameters">
    <![CDATA[
        from Bidder where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <sql-query name="Bidder.SearchByParameters" cacheable="false" read-only="true">
    <return-scalar column="BidderId" type="int"/>
    <return-scalar column="Name" type="string"/>
    <return-scalar column="BidderTypeName" type="string"/>
    <![CDATA[
      SELECT b.BidderId, b.Name, bt.Name BidderTypeName
      FROM ProjectsAndTendering.Bidders b
      INNER JOIN ProjectsAndTendering.BidderTypes bt ON bt.BidderTypeId = b.BidderTypeId
      WHERE b.Deleted = 0 and b.Activated = 1 AND bt.Deleted = 0 and bt.Activated = 1
      AND b.Name like :Name
      AND (:BidderTypeId = -1 OR b.BidderTypeId = :BidderTypeId)
    ]]>
  </sql-query>

</hibernate-mapping>