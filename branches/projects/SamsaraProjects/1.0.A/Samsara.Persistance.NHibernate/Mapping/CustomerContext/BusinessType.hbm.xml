<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="BusinessType" table="CustomerContext.BusinessTypes">
    
    <id name="BusinessTypeId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="BusinessType.GetByParameters">
    <![CDATA[
        from BusinessType where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="BusinessType.GetListByParameters">
    <![CDATA[
        from BusinessType where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="BusinessType.SearchByParameters">
    <![CDATA[
        from BusinessType where Deleted = 0 and Activated = 1
        and Name like :Name
    ]]>
  </query>

</hibernate-mapping>