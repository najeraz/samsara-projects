<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="OperativeSystemType" table="CustomerContext.OperativeSystemTypes">
    
    <id name="OperativeSystemTypeId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn"/>
    <property name="UpdatedOn"/>
    <property name="Activated"/>
    <property name="Deleted"/>

  </class>

  <query name="OperativeSystemType.GetByParameters">
    <![CDATA[
        from OperativeSystemType where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="OperativeSystemType.GetListByParameters">
    <![CDATA[
        from OperativeSystemType where Deleted = 0 and Activated = 1
        and (OperativeSystemTypeId = :OperativeSystemTypeId or :OperativeSystemTypeId = -1)
    ]]>
  </query>

  <query name="OperativeSystemType.SearchByParameters">
    <![CDATA[
        from OperativeSystemType where Deleted = 0 and Activated = 1
        and Name like :Name
    ]]>
  </query>

</hibernate-mapping>