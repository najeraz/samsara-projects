<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="AccessPointBrand" table="CustomerContext.AccessPointBrands">
    
    <id name="AccessPointBrandId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="AccessPointBrand.GetByParameters">
    <![CDATA[
        from AccessPointBrand where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="AccessPointBrand.GetListByParameters">
    <![CDATA[
        from AccessPointBrand where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="AccessPointBrand.SearchByParameters">
    <![CDATA[
        from AccessPointBrand where Deleted = 0 and Activated = 1
        and Name like :Name
    ]]>
  </query>

</hibernate-mapping>