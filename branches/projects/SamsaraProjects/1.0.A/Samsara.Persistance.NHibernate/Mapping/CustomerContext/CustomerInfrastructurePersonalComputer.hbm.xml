<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="CustomerInfrastructurePersonalComputer" table="CustomerContext.CustomerInfrastructurePersonalComputers">

    <id name="CustomerInfrastructurePersonalComputerId" type="int">
      <generator class="native"/>
    </id>

    <property name="SerialNumber"/>
    <property name="Quantity"/>
    <property name="ManufacturerReferenceNumber"/>
    <property name="CPU"/>
    <property name="RAM"/>
    <property name="Model"/>
    <property name="StorageSystem"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn"/>
    <property name="UpdatedOn"/>
    <property name="Activated"/>
    <property name="Deleted"/>

    <many-to-one name="CustomerInfrastructure"
                 class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructure, Samsara.CustomerContext.Core"
                 column="CustomerInfrastructureId"/>

    <many-to-one name="CustomerInfrastructurePersonalComputerClassification"
                 class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructurePersonalComputerClassification, 
                 Samsara.CustomerContext.Core" column="CustomerInfrastructurePersonalComputerClassificationId"/>

    <many-to-one name="PersonalComputerType"
                 class="Samsara.CustomerContext.Core.Entities.PersonalComputerType, Samsara.CustomerContext.Core"
                 column="PersonalComputerTypeId"/>

    <many-to-one name="ComputerBrand"
                 class="Samsara.CustomerContext.Core.Entities.ComputerBrand, Samsara.CustomerContext.Core"
                 column="ComputerBrandId"/>

    <many-to-one name="OperativeSystem"
                 class="Samsara.CustomerContext.Core.Entities.OperativeSystem, Samsara.CustomerContext.Core"
                 column="OperativeSystemId"/>
    
  </class>

  <query name="CustomerInfrastructurePersonalComputer.GetByParameters">
    <![CDATA[
        from CustomerInfrastructurePersonalComputer
        where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerInfrastructurePersonalComputer.GetListByParameters">
    <![CDATA[
        from CustomerInfrastructurePersonalComputer
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureId = :CustomerInfrastructureId
    ]]>
  </query>

  <query name="CustomerInfrastructurePersonalComputer.SearchByParameters">
    <![CDATA[
        from CustomerInfrastructurePersonalComputer
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureId = :CustomerInfrastructureId
    ]]>
  </query>

</hibernate-mapping>