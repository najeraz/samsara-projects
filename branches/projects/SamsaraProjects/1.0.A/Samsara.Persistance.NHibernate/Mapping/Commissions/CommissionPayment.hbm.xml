<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.Commissions.Core" 
  namespace="Samsara.Commissions.Core.Entities">
  
  <class name="CommissionPayment" table="Commissions.CommissionPayments">
    
    <id name="CommissionPaymentId" type="int">
      <generator class="native"/>
    </id>

    <property name="Amount"/>
    <property name="Comments"/>
    <property name="Month"/>
    <property name="Year"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn" type="Timestamp"/>
    <property name="UpdatedOn" type="Timestamp"/>
    <property name="Activated"/>
    <property name="Deleted"/>

    <many-to-one name="Staff" lazy="false"
                 class="Samsara.AlleatoERP.Core.Entities.Staff, Samsara.AlleatoERP.Core"
                 column="StaffId"/>
    
  </class>

  <query name="CommissionPayment.GetByParameters">
    <![CDATA[
        from CommissionPayment where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CommissionPayment.GetListByParameters">
    <![CDATA[
        from CommissionPayment where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <sql-query name="CommissionPayment.SearchByParameters">
    <return-scalar column="CommissionPaymentId" type="int"/>
    <return-scalar column="StaffName" type="string"/>
    <return-scalar column="Amount" type="decimal"/>
    <return-scalar column="Month" type="int"/>
    <return-scalar column="Year" type="int"/>
    <return-scalar column="CreatedByName" type="string"/>
    <return-scalar column="CreatedOn" type="DateTime"/>
    <return-scalar column="UpdatedByName" type="string"/>
    <return-scalar column="UpdatedOn" type="DateTime"/>
    <![CDATA[
        SELECT 
          cp.CommissionPaymentId, s.Fullname StaffName, cp.Amount, cp.Month, cp.Year, 
          u0.Username CreatedByName, cp.CreatedOn, u1.Username UpdatedByName, cp.UpdatedOn
        FROM Commissions.CommissionPayments cp
        INNER JOIN AlleatoERP.Staffs s ON s.StaffId = cp.StaffId AND s.Deleted = 0 AND s.Activated = 1
        LEFT JOIN Main.Users u0 ON u0.UserId = cp.CreatedBy
        LEFT JOIN Main.Users u1 ON u1.UserId = cp.UpdatedBy
        WHERE cp.Deleted = 0 AND cp.Activated = 1
        AND (cp.StaffId = :StaffId OR -1 = :StaffId)
    ]]>
  </sql-query>


</hibernate-mapping>