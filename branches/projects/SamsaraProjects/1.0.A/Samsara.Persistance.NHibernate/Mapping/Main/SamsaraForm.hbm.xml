<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.Main.Core" 
  namespace="Samsara.Main.Core.Entities">
  
  <class name="SamsaraForm" table="Main.SamsaraForms">
    
    <id name="SamsaraFormId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="Scheme"
                 class="Samsara.Main.Core.Entities.Scheme, Samsara.Main.Core"
                 column="SchemeId"/>

  </class>

  <query name="SamsaraForm.GetByParameters">
    <![CDATA[
        from SamsaraForm where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="SamsaraForm.GetListByParameters">
    <![CDATA[
        from SamsaraForm where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="SamsaraForm.SearchByParameters">
    <![CDATA[
        from SamsaraForm where Deleted = 0 and Activated = 1
        and Name like :Name
    ]]>
  </query>

</hibernate-mapping>