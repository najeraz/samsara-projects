<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.Main.Core" 
  namespace="Samsara.Main.Core.Entities">
  
  <class name="UserPermission" table="Main.UserPermission">
    
    <id name="UserPermissionId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="SamsaraForm"
                 class="Samsara.Main.Core.Entities.SamsaraForm, Samsara.Main.Core"
                 column="SamsaraFormId"/>

    <many-to-one name="User"
                 class="Samsara.Main.Core.Entities.User, Samsara.Main.Core"
                 column="UserId"/>
    
  </class>

  <query name="UserPermission.GetByParameters">
    <![CDATA[
        from UserPermission where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="UserPermission.GetListByParameters">
    <![CDATA[
        from UserPermission where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="UserPermission.SearchByParameters">
    <![CDATA[
        from UserPermission where Deleted = 0 and Activated = 1
        and Name like :Name
    ]]>
  </query>

</hibernate-mapping>