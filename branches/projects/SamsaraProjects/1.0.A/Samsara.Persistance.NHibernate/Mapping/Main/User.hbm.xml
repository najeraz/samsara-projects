<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.Main.Core" 
  namespace="Samsara.Main.Core.Entities">
  
  <class name="User" table="Main.Users">
    
    <id name="UserId" type="int">
      <generator class="native"/>
    </id>

    <property name="Username"/>
    <property name="Password" access="readonly"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="Staff"
                 class="Samsara.AlleatoERP.Core.Entities.Staff, Samsara.AlleatoERP.Core"
                 column="StaffId"/>

  </class>

  <query name="User.GetByParameters">
    <![CDATA[
        from User 
        where Username = :Username
        and Password = :Password
        and Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="User.GetListByParameters">
    <![CDATA[
        from User where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="User.SearchByParameters">
    <![CDATA[
        from User where Deleted = 0 and Activated = 1
        and Name like :Name
    ]]>
  </query>

</hibernate-mapping>