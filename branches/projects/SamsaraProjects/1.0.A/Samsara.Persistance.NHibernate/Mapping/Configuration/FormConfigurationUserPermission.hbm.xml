<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.Configuration.Core" 
  namespace="Samsara.Configuration.Core.Entities">
  
  <class name="FormConfigurationUserPermission" table="Configuration.FormConfigurationUserPermissions">
    
    <id name="FormConfigurationUserPermissionId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>
    <property name="UserPermissionId"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn" type="Timestamp"/>
    <property name="UpdatedOn" type="Timestamp"/>
    <property name="Activated"/>
    <property name="Deleted"/>

    <many-to-one name="FormConfiguration"
                 class="Samsara.Configuration.Core.Entities.FormConfiguration, Samsara.Configuration.Core"
                 column="FormConfigurationId"/>
    

    <set name="FormConfigurationUserPermissionUsers" table="Configuration.FormConfigurationUserPermissionUsers" cascade="all-delete-orphan">
      <key column="FormConfigurationUserPermissionId"/>
      <one-to-many
        class="Samsara.Configuration.Core.Entities.FormConfigurationUserPermissionUser, Samsara.Configuration.Core"/>
    </set>
    
  </class>

  <query name="FormConfigurationUserPermission.GetByParameters">
    <![CDATA[
        from FormConfigurationUserPermission where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="FormConfigurationUserPermission.GetListByParameters">
    <![CDATA[
        from FormConfigurationUserPermission where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="FormConfigurationUserPermission.SearchByParameters">
    <![CDATA[
        from FormConfigurationUserPermission where Deleted = 0 and Activated = 1
        and Name like :Name
    ]]>
  </query>

</hibernate-mapping>