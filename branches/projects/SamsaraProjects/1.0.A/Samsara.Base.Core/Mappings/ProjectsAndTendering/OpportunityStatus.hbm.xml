<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="OpportunityStatus" table="ProjectsAndTendering.OpportunityStatuses">
    
    <id name="OpportunityStatusId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="OpportunityStatus.GetListByParameters">
    <![CDATA[
        from OpportunityStatus where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <sql-query name="OpportunityStatus.SearchByParameters" cacheable="false" read-only="true">
    <return-scalar column="OpportunityStatusId" type="int"/>
    <return-scalar column="Name" type="string"/>
    <![CDATA[
      SELECT ts.OpportunityStatusId, ts.Name
      FROM ProjectsAndTendering.OpportunityStatuses ts
      WHERE ts.Deleted = 0 and ts.Activated = 1
      AND ts.Name like :Name
    ]]>
  </sql-query>
  
</hibernate-mapping>