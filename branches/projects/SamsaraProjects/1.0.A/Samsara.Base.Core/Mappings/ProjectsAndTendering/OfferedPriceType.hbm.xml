<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="OfferedPriceType" table="ProjectsAndTendering.OfferedPriceTypes">
    
    <id name="OfferedPriceTypeId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="OfferedPriceType.GetListByParameters">
    <![CDATA[
        from OfferedPriceType where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <sql-query name="OfferedPriceType.SearchByParameters" cacheable="false" read-only="true">
    <return-scalar column="OfferedPriceTypeId" type="int"/>
    <return-scalar column="Name" type="string"/>
    <![CDATA[
      SELECT ts.OfferedPriceTypeId, ts.Name
      FROM ProjectsAndTendering.OfferedPriceTypees ts
      WHERE ts.Deleted = 0 and ts.Activated = 1
      AND ts.Name like :Name
    ]]>
  </sql-query>
  
</hibernate-mapping>