<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.Operation.Core" 
  namespace="Samsara.Operation.Core.Entities">
  
  <class name="Product" table="Operation.Products">
    
    <id name="ProductId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Code"/>
    <property name="Description"/>
    <property name="Deleted"/>
    <property name="Activated"/>

  </class>

  <query name="Product.GetByParameters">
    <![CDATA[
        from Product where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="Product.GetListByParameters">
    <![CDATA[
        from Product where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="Product.SearchByParameters">
    <![CDATA[
        from Product where Deleted = 0 and Activated = 1
        and Name like :Name and Code like :Code
    ]]>
  </query>
  
</hibernate-mapping>