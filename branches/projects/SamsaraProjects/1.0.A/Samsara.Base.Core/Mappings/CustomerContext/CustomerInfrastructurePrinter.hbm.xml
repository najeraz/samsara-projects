<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="CustomerInfrastructurePrinter" table="CustomerContext.CustomerInfrastructurePrinters">
    
    <id name="CustomerInfrastructurePrinterId" type="int">
      <generator class="native"/>
    </id>

    <property name="SerialNumber"/>
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="CustomerInfrastructure"
                 class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructure, Samsara.CustomerContext.Core"
                 column="CustomerInfrastructureId"/>

    <many-to-one name="PrinterType"
                 class="Samsara.CustomerContext.Core.Entities.PrinterType, Samsara.CustomerContext.Core"
                 column="PrinterTypeId"/>

    <many-to-one name="PrinterBrand"
                 class="Samsara.CustomerContext.Core.Entities.PrinterBrand, Samsara.CustomerContext.Core"
                 column="PrinterBrandId"/>

  </class>

  <query name="CustomerInfrastructurePrinter.GetByParameters">
    <![CDATA[
        from CustomerInfrastructurePrinter 
        where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerInfrastructurePrinter.GetListByParameters">
    <![CDATA[
        from CustomerInfrastructurePrinter 
        where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerInfrastructurePrinter.SearchByParameters">
    <![CDATA[
        from CustomerInfrastructurePrinter 
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureId = :CustomerInfrastructureId
    ]]>
  </query>

</hibernate-mapping>