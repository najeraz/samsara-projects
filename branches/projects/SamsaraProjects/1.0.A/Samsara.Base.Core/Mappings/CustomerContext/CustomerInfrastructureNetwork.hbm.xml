<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="CustomerInfrastructureNetwork" table="CustomerContext.CustomerInfrastructureNetworks">

    <id name="CustomerInfrastructureNetworkId" type="int">
      <generator class="native"/>
    </id>
    
    <property name="Deleted"/>
    <property name="Activated"/>

    <many-to-one name="CustomerInfrastructure"
                 class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructure, Samsara.CustomerContext.Core"
                 column="CustomerInfrastructureId"/>


    <set name="CustomerInfrastructureNetworkSwitches" table="CustomerContext.CustomerInfrastructureNetworkSwitches"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerInfrastructureNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructureNetworkSwitch, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerInfrastructureNetworkCommutators" table="CustomerContext.CustomerInfrastructureNetworkCommutators"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerInfrastructureNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructureNetworkCommutator, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerInfrastructureNetworkCablings" table="CustomerContext.CustomerInfrastructureNetworkCablings"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerInfrastructureNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructureNetworkCabling, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerInfrastructureNetworkRouters" table="CustomerContext.CustomerInfrastructureNetworkRouters"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerInfrastructureNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructureNetworkRouter, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerInfrastructureNetworkFirewalls" table="CustomerContext.CustomerInfrastructureNetworkFirewalls"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerInfrastructureNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructureNetworkFirewall, Samsara.CustomerContext.Core"/>
    </set>

    <set name="CustomerInfrastructureNetworkWifis" table="CustomerContext.CustomerInfrastructureNetworkWifis"
         where="Deleted = 0 AND Activated = 1" cascade="all-delete-orphan" lazy="false">
      <key column="CustomerInfrastructureNetworkId"/>
      <one-to-many
        class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructureNetworkWifi, Samsara.CustomerContext.Core"/>
    </set>
    
  </class>

  <query name="CustomerInfrastructureNetwork.GetByParameters">
    <![CDATA[
        from CustomerInfrastructureNetwork
        where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerInfrastructureNetwork.GetListByParameters">
    <![CDATA[
        from CustomerInfrastructureNetwork
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureId = :CustomerInfrastructureId
    ]]>
  </query>

  <query name="CustomerInfrastructureNetwork.SearchByParameters">
    <![CDATA[
        from CustomerInfrastructureNetwork
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureId = :CustomerInfrastructureId
    ]]>
  </query>

</hibernate-mapping>