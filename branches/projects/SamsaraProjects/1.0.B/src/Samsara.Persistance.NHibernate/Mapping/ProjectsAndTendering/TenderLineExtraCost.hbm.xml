<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="TenderLineExtraCost" table="ProjectsAndTendering.TenderLineExtraCosts">

    <id name="TenderLineExtraCostId" type="int">
      <generator class="native"/>
    </id>

    <property name="Name"/>
    <property name="Description"/>
    <property name="Amount"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn" type="Timestamp"/>
    <property name="UpdatedOn" type="Timestamp"/>
    <property name="Activated"/>
    <property name="Deleted"/>

    <many-to-one name="TenderLine"
                 class="Samsara.ProjectsAndTendering.Core.Entities.TenderLine, Samsara.ProjectsAndTendering.Core"
                 column="TenderLineId"/>
    
  </class>

  <query name="TenderLineExtraCost.SearchByParameters">
    <![CDATA[
        from TenderLineExtraCost where Deleted = 0 and Activated = 1
        and TenderLineId = :TenderLineId
    ]]>
  </query>

</hibernate-mapping>