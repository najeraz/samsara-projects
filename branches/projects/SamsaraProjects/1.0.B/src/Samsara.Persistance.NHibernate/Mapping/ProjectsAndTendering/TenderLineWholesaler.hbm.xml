<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.ProjectsAndTendering.Core" 
  namespace="Samsara.ProjectsAndTendering.Core.Entities">
  
  <class name="TenderLineWholesaler" table="ProjectsAndTendering.TenderLineWholesalers">

    <id name="TenderLineWholesalerId" type="int">
      <generator class="native"/>
    </id>

    <property name="Price"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn" type="Timestamp"/>
    <property name="UpdatedOn" type="Timestamp"/>
    <property name="Activated"/>
    <property name="Deleted"/>

    <many-to-one name="TenderLine"
                 class="Samsara.ProjectsAndTendering.Core.Entities.TenderLine, Samsara.ProjectsAndTendering.Core"
                 column="TenderLineId"/>
    <many-to-one name="Wholesaler"
                 class="Samsara.ProjectsAndTendering.Core.Entities.Wholesaler, Samsara.ProjectsAndTendering.Core"
                 column="WholesalerId"/>
    <many-to-one name="Currency"
                 class="Samsara.Operation.Core.Entities.Currency, Samsara.ProjectsAndTendering.Core"
                 column="CurrencyId"/>
    
  </class>

  <query name="TenderLineWholesaler.SearchByParameters">
    <![CDATA[
        from TenderLineWholesaler where Deleted = 0 and Activated = 1
        and TenderLineId = :TenderLineId
    ]]>
  </query>

</hibernate-mapping>