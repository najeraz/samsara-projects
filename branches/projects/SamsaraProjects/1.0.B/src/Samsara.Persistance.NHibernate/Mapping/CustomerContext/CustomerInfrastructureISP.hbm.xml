<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
  assembly="Samsara.CustomerContext.Core" 
  namespace="Samsara.CustomerContext.Core.Entities">
  
  <class name="CustomerInfrastructureISP" table="CustomerContext.CustomerInfrastructureISPs">
    
    <id name="CustomerInfrastructureISPId" type="int">
      <generator class="native"/>
    </id>

    <property name="Bandwidth"/>

    <property name="UpdatedBy"/>
    <property name="CreatedBy"/>
    <property name="CreatedOn" type="Timestamp"/>
    <property name="UpdatedOn" type="Timestamp"/>
    <property name="Activated"/>
    <property name="Deleted"/>

    <many-to-one name="CustomerInfrastructure"
                 class="Samsara.CustomerContext.Core.Entities.CustomerInfrastructure, Samsara.CustomerContext.Core"
                 column="CustomerInfrastructureId"/>

    <many-to-one name="ISP"
                 class="Samsara.CustomerContext.Core.Entities.ISP, Samsara.CustomerContext.Core"
                 column="ISPId"/>

  </class>

  <query name="CustomerInfrastructureISP.GetByParameters">
    <![CDATA[
        from CustomerInfrastructureISP
        where Deleted = 0 and Activated = 1
    ]]>
  </query>

  <query name="CustomerInfrastructureISP.GetListByParameters">
    <![CDATA[
        from CustomerInfrastructureISP
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureId = :CustomerInfrastructureId
    ]]>
  </query>

  <query name="CustomerInfrastructureISP.SearchByParameters">
    <![CDATA[
        from CustomerInfrastructureISP
        where Deleted = 0 and Activated = 1
        and CustomerInfrastructureId = :CustomerInfrastructureId
    ]]>
  </query>

</hibernate-mapping>